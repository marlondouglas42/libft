TESTES

clear; gcc ./src/ft_isalpha.c ./tests/test_ft_isalpha.c -lrt -lm -o test_program && ./test_program
clear; gcc ./src/ft_isdigit.c ./tests/test_ft_isdigit.c -lrt -lm -o test_program && ./test_program
clear; gcc ./src/ft_isalnum.c ./src/ft_isalpha.c ./src/ft_isdigit.c ./tests/test_ft_isalnum.c -lrt -lm -o test_program -I./ && ./test_program
clear; gcc ./src/ft_isascii.c ./tests/test_ft_isascii.c -lrt -lm -o test_program && ./test_program
clear; gcc ./src/ft_isprint.c ./tests/test_ft_isprint.c -lrt -lm -o test_program && ./test_program
clear; gcc ./src/ft_strlen.c ./tests/test_ft_strlen.c -lrt -lm -o test_program -I./ && ./test_program
clear; gcc ./src/ft_tolower.c ./tests/test_ft_tolower.c -lrt -lm -o test_program -I./ && ./test_program
clear; gcc ./src/ft_toupper.c ./tests/test_ft_toupper.c -lrt -lm -o test_program -I./ && ./test_program
clear; gcc ./src/ft_strchr.c ./tests/test_ft_strchr.c -lrt -lm -o test_program -I./ && ./test_program


